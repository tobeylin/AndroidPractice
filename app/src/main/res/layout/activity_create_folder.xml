<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/createFolder_folderPathEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium"
        android:hint="Folder Path"
        android:textColorHint="#9B9B9B"/>

    <Button
        android:id="@+id/createFolder_createButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/createFolder_folderPathEditText"
        android:text="Create"/>

    <LinearLayout
        android:id="@+id/createFolder_createFileLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createFolder_createButton"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/createFolder_createFileTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create File In Package Folder"/>

        <Button
            android:id="@+id/createFolder_createFileInPackageFolderButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createFolder_createFileLayout"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/createFolder_createFileInWrongWayTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create File In Package Folder(Wrong Way)"/>

        <Button
            android:id="@+id/createFolder_createFileInWrongWayButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create"/>

    </LinearLayout>

</RelativeLayout>